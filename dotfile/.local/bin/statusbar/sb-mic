#!/bin/sh

id=`pulsemixer -l | grep Source | grep Default | awk -F"[ ,]" '{print $3}'`


# Prints the current volume or ðŸ”‡ if muted.
case $BLOCK_BUTTON in
	1) "$TERMINAL" -e pulsemixer; pkill -RTMIN+4 dwmblocks ;;
	2) pulsemixer --id $id --toggle-mute ;;
	4) pulsemixer --id $id --change-volume +5 ;;
	5) pulsemixer --id $id --change-volume -5 ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

mute=`pulsemixer --id $id --get-mute`
if [ $mute == 1 ]; then
	echo "ðŸŽ¤Muted" && exit
fi

vol=`pulsemixer --id $id --get-volume | awk -F" " '{ print $1 }'`

echo "ðŸŽ¤$vol%"
